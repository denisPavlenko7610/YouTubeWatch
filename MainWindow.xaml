<Window x:Class="YouTubeRealtimeStats.YouTubeWatch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="YouTube Realtime Stats" Height="180" Width="241" Loaded="Window_Loaded"
        Background="#333333"
        WindowStyle="None">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5"/>
    </WindowChrome.WindowChrome>
    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Width="231">
        <Label x:Name="ChannelName" HorizontalAlignment="Center" FontWeight="Bold" FontSize="16" Foreground="White" Content="RDragon" Margin="5"/>
        
        <Label x:Name="lblSubscriberCount" FontWeight="Bold" FontSize="16" Foreground="White" Content="Subscriber Count" Margin="5"/>
        <Label x:Name="lblViewCount" FontWeight="Bold" FontSize="16" Foreground="White" Content="View Count" Margin="5"/>
        <Label x:Name="lblVideosCount" FontWeight="Bold" FontSize="16" Foreground="White" Content="Videos Count" Margin="5"/>
    </StackPanel>
</Window>
