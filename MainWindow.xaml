<Window x:Class="YouTubeRealtimeStats.YouTubeWatch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="YouTube Realtime Stats" Height="502" Width="241" Loaded="Window_Loaded"
        Background="#333333">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Subscribers:" HorizontalAlignment="Left" Foreground="White" Padding="20"/>
        <Label x:Name="lblSubscriberCount" Grid.Row="1" HorizontalAlignment="Center" FontWeight="Bold" FontSize="24" Foreground="White"/>

        <TextBlock Text="Views:" Grid.Row="2" HorizontalAlignment="Left" Foreground="White" Margin="0 10 0 0" Padding="20"/>
        <Label x:Name="lblViewCount" Grid.Row="3" HorizontalAlignment="Center" FontWeight="Bold" FontSize="24" Foreground="White"/>
    </Grid>
</Window>
